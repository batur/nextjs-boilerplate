    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.3.3",
    "sass": "^1.62.1",
    "storybook": "^8.3.1",
    "tailwindcss": "^3.4.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
